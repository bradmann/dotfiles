[Unit]
Description=XRemap key remapper
After=graphical-session.target
Wants=graphical-session.target

[Service]
Type=simple
ExecStart=/home/bradmann/.cargo/bin/xremap --watch /home/bradmann/.config/xremap/config.yml
Restart=on-failure
RestartSec=2
Environment=RUST_LOG=warn

[Install]
WantedBy=default.target

